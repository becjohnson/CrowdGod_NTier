@model CrowdGod.Model.AnswerModel.AnswerCreate

<h4>AnswerCreate</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.ActionLink("Answer", "Create", GetQuestionId(Model))
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

}
@{
    int? GetQuestionId(CrowdGod.Model.AnswerModel.AnswerCreate answer)
    {
        int? questionid = answer.QuestionId;
        return questionid;
    }
}
